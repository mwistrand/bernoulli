# Database configuration shared by api/ and db/
DB_HOST=localhost
DB_PORT=5432
DB_USER=bernoulli
DB_PASS=bernoulli
DB_PASSWORD=bernoulli
DB_NAME=bernoulli

# Session secret for express-session
SESSION_SECRET=change-me-in-production

# OpenTelemetry / Jaeger configuration
# OTLP endpoint for sending traces (default: http://localhost:4318)
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
# Service name that appears in Jaeger UI
OTEL_SERVICE_NAME=bernoulli-api

# Optional: Keycloak configuration (if using)
# KEYCLOAK_URL=http://localhost:8080
# KEYCLOAK_REALM=bernoulli
# KEYCLOAK_CLIENT_ID=bernoulli-api
