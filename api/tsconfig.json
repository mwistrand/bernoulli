{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "ES2015",
		"outDir": "./dist",
		"baseUrl": "./",
		"noImplicitAny": false,
		"strictBindCallApply": false,
		"noFallthroughCasesInSwitch": false,
		// Explicitly re-declare decorator support for NestJS and TypeORM
		// Even though inherited from root, Docker builds need these explicit
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true
	}
}
